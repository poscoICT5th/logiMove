<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Pack.mapper.MoveMapper">    
    <select id="selectAll" resultType="LogiMoveVo">
        SELECT * 
        from Move
    </select>
    
    <select id="selectByInstNo" parameterType="String" resultType="LogiMoveVo">
        SELECT * 
        from Move
        where instruction_no=#{instructionNo};
    </select>
    
    <select id="selectSome" parameterType="LogiMoveSearchDTO" resultType="LogiMoveVo">
    	select *
    	from Move
    	where
    	<if test='status != null and status neq ""'>status=#{status} and</if>
    	<if test='location != null and location neq ""'>location=#{location} and</if>
    	<if test='instruction_no != null and instruction_no neq ""'>instruction_no=#{instruction_no} and</if>
    	<if test='lot_no != null and lot_no neq ""'>lot_no like CONCAT('%',#{lot_no},'%') and</if>
    	<if test='item_no != null and item_no neq ""'>item_no like CONCAT('%',#{item_no},'%') and</if>
    	<if test='item_name != null and item_name neq ""'>item_name=#{item_name} and</if>
    	<if test='from_warehouse != null and from_warehouse neq ""'>from_warehouse=#{from_warehouse} and</if>
    	<if test='to_warehouse != null and to_warehouse neq ""'>to_warehouse=#{to_warehouse} and</if>
    	<if test='inst_reg_date != null and inst_reg_date neq ""'>inst_reg_date=#{inst_reg_date} and</if>
    	<if test='inst_deadline != null and inst_deadline neq ""'>inst_deadline=#{inst_deadline} and</if>
    	<if test='done_date != null and done_date neq ""'>done_date=#{done_date} and</if>
    	(width between #{min_width} and #{max_width}) and
    	(weight between #{min_weight} and #{max_weight}) and
    	(thickness between #{min_thickness} and #{max_thickness}) and
    	(height between #{min_height} and #{max_height}) and
    	(move_amount between #{min_move_amount} and #{max_move_amount})
    </select>
    
    <insert id="insert" parameterType="LogiMoveDTO">
        INSERT
        INTO Move 
        VALUES (
        	#{status},
        	#{location},
        	#{instruction_no},
        	#{lot_no},
        	#{item_no},
        	#{item_name},
        	#{width},
        	#{weight},
        	#{thickness},
        	#{height},
        	#{move_amount},
        	#{from_warehouse},
        	#{to_warehouse},
        	#{inst_reg_date},
        	#{inst_deadline},
        	#{done_date}
        );
    </insert>
    
    <delete id="delete" parameterType="String">
	    delete
		from Move
		where instruction_no=#{instructionNo};
    </delete>
    
    <update id="processing" parameterType="String">
    	UPDATE Move 
    	SET status = "이동중" 
    	WHERE instruction_no=#{instructionNo};
    </update>
    
    <update id="confirm" parameterType="String">
    	UPDATE Move 
    	SET status = "이동완료" 
    	WHERE instruction_no=#{instructionNo};
    </update>
    
</mapper>
